

<% @postsr = Post.last(10).reverse %>

<% @postsr.each do |t| %>
<% @user = User.find(t.user_id )%>
<% @profile = Profile.find(@user.id) %>


<div class='row posts'>
	<div class='col-4'></div>
	<div class='col-4 postStuff'>
		<img id='streamPhoto' src='<%= url(@profile.picture)%>'>
		<h1 class='postHead'><%=t.title%></h1>
		<h6><a href='/users/<%=t.user_id%>'>By: <%=@user.username%></a></h6>
		<p class='postBody'><%=t.content%></p>
	</div>
	<div class='col-4'></div>
</div>

<%end%>


	<footer >
		<div class='row'>
			<div class='col-12'>
				<img class='footer' src='<%= url("images/beers1.png")%>'>
				<img class='footer' id='rightFoot' src='<%= url("images/beer2.png")%>'>
			</div>
		</div>
	</footer>